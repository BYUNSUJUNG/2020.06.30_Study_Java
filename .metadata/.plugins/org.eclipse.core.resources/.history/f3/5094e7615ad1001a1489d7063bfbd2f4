package Ch27;

public class ch04Thread3 implements Runnable {

	int j = 0;
	
	@Override
	public void run() {
		while(true) {
			for (int j = 0; j < 3; j++) {
				if(j==0) {
					C04MainThread.map[0][j+2] = 0;
					C04MainThread.map[0][j] = 1;
				} else { // j==1, j==2
					C04MainThread.map[0][j-1] = 0;
					C04MainThread.map[0][j] = 1;
				}
				try {Thread.sleep(900);} catch(Exception e) {};
			}
		}
	}
}
