package Ch32;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;

public class C01ServerUI extends JFrame implements ActionListener {
	
	public JTextField txt;
	public JTextArea area;
	public JPanel panel;
	public JScrollPane scroll;
	
	C01ServerUI() {
		super("Server"); // 프레임 창 구현
		setSize(500, 500);
		
		panel = new JPanel(); // 패널 추가
		panel.setLayout(null); // 레이아웃 지정
		
		scroll = new JScrollPane();
		scroll.setBounds(10,10,450,300);
		
		// 컴포넌트 추가
		area = new JTextArea();
		scroll.setViewportView(area);
		scroll.setBounds(10,10,450,300);
		
		txt = new JTextField();
		txt.setBounds(10,320,450,40);
		txt.addActionListener(this);
		
		// 패널에 컴포넌트 등록
		panel.add(scroll);
		panel.add(txt);
		// 패널을 프레임에 지정
		add(panel);
		setVisible(true);
		
	}
	
	public static void main(String[] args) {
		new C01ServerUI();
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		if(e.getSource() == txt) {
			area.append(txt.getText()+"\n");
		}
	}
}
