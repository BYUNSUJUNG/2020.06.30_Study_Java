package Ch29;

import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;

public class C06SwingTextAreaActionListener extends JFrame implements ActionListener {
	TextArea Area1;
	JTextField txt1;
	
	public C06SwingTextAreaActionListener() {
		
		super("다섯번째 프레임 창입니다");
		// 패널 생성
		JPanel pl = new JPanel();
		// 배경색 지정
		pl.setBackground(Color.ORANGE);
				
		// TextArea 객체 생성
		Area1 = new TextArea();
		// TextArea 위치 지정
		Area1.setBounds(10,10,400,300);
		
		txt1 = new JTextField();
		txt1.setBounds(10,210,200,70);
		txt1.addActionListener(this); // 이벤트 처리할 객체를 감시하는 것
		// 패널에 요소 추가
		pl.add(Area1);
		pl.add(txt1);
		pl.setLayout(null);
		add(pl);
		
		// 패널(프레임) 사이즈 지정
		setSize(500,500);
		// 화면 표시 여부
		setVisible(true);
	}
	
	public static void main(String[] args) {

		// 자바 프레임 창 생성
		new C06SwingTextAreaActionListener();
		
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		// txt1의 텍스트의 내용을 area1에 넣겠다
		if(e.getSource() == txt1) {
			Area1.append(txt1.getText()+"\n");
			txt1.setText(""); // txt1 비우기
		}
		
	}
}
