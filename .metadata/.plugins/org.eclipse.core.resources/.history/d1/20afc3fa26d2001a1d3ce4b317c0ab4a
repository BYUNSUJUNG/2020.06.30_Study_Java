package Ch29;

import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;

// 버튼을 누르면 Area1에 버튼 눌림이 추가됨
public class C06SwingTextAreaActionListener2 extends JFrame implements ActionListener {
	TextArea Area1;
	JButton btn1;
	
	public C06SwingTextAreaActionListener2() {
		
		super("다섯번째 프레임 창입니다");
		// 패널 생성
		JPanel pl = new JPanel();
		// 배경색 지정
		pl.setBackground(Color.ORANGE);
				
		// TextArea 객체 생성
		Area1 = new TextArea();
		// TextArea 위치 지정
		Area1.setBounds(10,10,400,200);
		
		// 버튼 객체 생성
		btn1 = new JButton("INSERT");
		btn1.setBounds(10,250,100,30);
		btn1.addActionListener(this); // 이벤트 처리할 객체를 감시하는 것
		
		// 패널에 요소 추가
		pl.add(Area1);
		pl.add(btn1);
		pl.setLayout(null);
		add(pl);
		
		// 패널(프레임) 사이즈 지정
		setSize(500,500);
		// 화면 표시 여부
		setVisible(true);
	}
	
	public static void main(String[] args) {

		// 자바 프레임 창 생성
		new C06SwingTextAreaActionListener2();
		
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		// 버튼이 눌리면 "버튼 눌림"문자를 Area1에 추가하겠다
		// e.getSource().equals(btn1)
		if(e.getSource().equals(btn1)) {
			Area1.append("버튼 눌림\n");
		}
		
	}
}
