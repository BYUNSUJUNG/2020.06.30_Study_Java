package Ch03;

import java.io.IOException;

public class C02SystemInRead {
	public static void main(String[] args) throws IOException {
		int keyCode;
		
		while (true) {
			keyCode = System.in.read();
			System.out.println("keyCode: "+keyCode);
			if (keyCode==113) { // 문자 q
				break;
			}
		}

		System.out.println("종료");
		
	}
}
