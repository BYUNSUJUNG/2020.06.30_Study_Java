import java.util.Scanner;

public class StarForPrint3 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int iCnt = scan.nextInt();
		
		for (int i = 0; i < iCnt; i++) {
			for (int j = 0; j < iCnt*2; j++) {
				if(j/2==0) {// Â¦¼öÀÏ ¶§
					System.out.print(" ");
				} else {
					System.out.print("*");
				}
				if(j==iCnt) {
					System.out.println();
				}
			}
			
		}
	}
}
