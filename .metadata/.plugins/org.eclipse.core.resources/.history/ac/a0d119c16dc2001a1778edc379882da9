package Ch12;

// 식당 예약 프로그램 작성
// 예약가능룸: 10
// 손님이 예약할 때마다 자동으로 room 감소
public class C08Revation {
	static int Room = 10;
	String Name;
	private String Phone;
	
	// 생성자오버로딩으로 값을 받아도되지만,
	// phone이 private이니까 메서드를 사용해보자
	void setReserve(String name, String phone) {
		this.Name = name;
		this.Phone = phone;
	}
	
	// 현재 몇개의 방이 남았는가
	String getReserve() {
		return "현재 남아있는 방의 개수는 "+Room+"개 입니다.";
	}
	
}
