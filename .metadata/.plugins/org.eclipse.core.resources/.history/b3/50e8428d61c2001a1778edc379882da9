package Ch11;
public class C07BookArray {

	public static void main(String[] args) {
		C07Book [] library = new C07Book[5];
		
		library[0] = new C07Book("태백산맥","조정래");
		library[1] = new C07Book("데미안","헤르만 헤세");
		library[2] = new C07Book("어떻게 살 것인가","유시민");
		library[3] = new C07Book("토지","박경리");
		library[4] = new C07Book("어린왕자","생텍쥐페리");
		
		for(int i=0;i<library.length;i++) {
			library[i].showBookInfo();
		}
		for(int i=0;i<library.length;i++) {
			System.out.println(library[i]);
		}
	}
	
	
}

