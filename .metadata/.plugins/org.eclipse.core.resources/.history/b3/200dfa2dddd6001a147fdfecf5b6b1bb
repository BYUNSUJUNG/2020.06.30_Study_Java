package Ch32;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.IOException;

import javax.swing.*;

public class C01ClientUI extends JFrame implements ActionListener {
	
	public JTextField txt;
	public JTextArea area;
	public JPanel panel;
	public JScrollPane scroll;
	C01ClientBackground background = new C01ClientBackground();
	
	C01ClientUI() {
		super("Client"); // 프레임 창 구현
		setSize(500, 500);
		
		panel = new JPanel(); // 패널 추가
		panel.setLayout(null); // 레이아웃 지정
		
		
		// 컴포넌트 추가
		txt = new JTextField();
		txt.setBounds(10,320,450,40);
		txt.addActionListener(this);
		
		area = new JTextArea();
		scroll = new JScrollPane(area);
		scroll.setBounds(10,10,450,300);
		
		// 패널에 컴포넌트 등록
		panel.add(scroll);
		panel.add(txt);
		// 패널을 프레임에 지정
		add(panel);
		setVisible(true);
		
		background.setting(this);
		background.conn();
		
	}
	
	public static void main(String[] args) {
		new C01ClientUI();
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		if(e.getSource() == txt) {
			try {
				String msg = "나[client]: "+txt.getText()+"\n";
				area.append(msg);
				background.sendMsg(msg); // C01ClientBackground의 sendMsg();
				txt.setText("");
			} catch (Exception e1) {}
			
		}
	}
	
	// 받은 메세지 area에 붙이기
	public void appendMsg(String msg) {
		area.append(msg);
	}
}
