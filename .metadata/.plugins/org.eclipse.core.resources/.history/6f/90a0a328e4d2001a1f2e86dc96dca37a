package Ch29;

import java.awt.*;

import javax.swing.*;

public class C07SwingaddThread extends JFrame {
	
	JPanel pl;
	JTextArea area1;
	JScrollPane scroll;
	TextField txt1;
	JButton btn1;
	
	C07SwingaddThread() {
		super("스레드를 동작시키는 프레임 창");
		
		// panel
		pl = new JPanel();
		
		// textarea, scroll
		area1 = new JTextArea(10,30);
		scroll = new JScrollPane(area1);
		scroll.setBounds(10,10,450,150);
		
		// text
		txt1 = new TextField();
		txt1.setBounds(10,170,150,30);
		
		// button
		btn1 = new JButton("파일로 저장");
		btn1.setBounds(10,220,100,30);
		
		// add
		pl.add(scroll);
		pl.add(txt1);
		pl.add(btn1);
		add(pl);
		pl.setLayout(null);
		setSize(500,300);
		setVisible(true);
		
	}
	
	public static void main(String[] args) {
		new C07SwingaddThread();
	}
}
