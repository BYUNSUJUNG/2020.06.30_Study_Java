package Ch25;

import java.io.*;

// write()
public class C05CharStreamEx {
	public static void main(String[] args) {
		try {
			Writer out = new FileWriter("c:/temp/test1.txt");
			
			char a = 'A';
			char b = 'B';
			char c = 'C';
			
			out.write(a);
			out.write(b);
			out.write(c);
			
			out.flush();
			out.close();
			
		} catch(Exception e) {
			
		}
	}
}
