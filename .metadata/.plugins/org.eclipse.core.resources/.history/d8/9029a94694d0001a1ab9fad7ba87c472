package Ch26;

import java.io.*;

// FileOutputStream(), DataOutputStream()
// FileInputStream(), DataInputStream()
public class C03SubClassStream {
	public static void main(String[] args) {
	
		try {
			FileOutputStream out = new FileOutputStream("c:/temp/test11.txt");
			DataOutputStream Dout = new DataOutputStream(out);
			
			// 넣는 순이랑 빼내는 순이랑 같아야함
			// utf -> double -> int
			Dout.writeUTF("홍길동"); // UTF
			Dout.writeDouble(12.12); // double 자료형
			Dout.writeInt(1); // 정수형
			
			Dout.flush();
			Dout.close();
			out.close();
			
			FileInputStream in = new FileInputStream("c:/temp/test11.txt");
			DataInputStream Din = new DataInputStream(in);
			
			String tmp;
			double dnum;
			int num;

			// 넣는 순이랑 빼내는 순이랑 같아야함
			// utf -> double -> int
			tmp = Din.readUTF();
			dnum = Din.readDouble();
			num = Din.readInt();
			
			System.out.println(tmp+","+dnum+","+num);
			
			Din.close();
			in.close();
			
		} catch (Exception e) {
			
		}
	}
}
